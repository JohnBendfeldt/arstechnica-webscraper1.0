<div class="container">
	<h3>Ars Technica Saved Articles</h3>

    
            {{#each article}}
                <!--if there are saved articles it will show below-->
                {{#if this.saved}}
                <div class="panel panel-primary">
                <div class="panel-heading">
                    <a target="_blank" href="{{this.link}}" class="title">{{this.title}}</a>
                    <br>
                    <!--DELETE button-->
                    <a href="/delete/{{this._id}}"><button type="button" class="btn-danger btn-sm saved-buttons">Delete</button></a>
                    <!--ADD NOTES button with a data-value of the news articles id-->
                    <button type="button" class="btn btn-info saved-buttons" data-toggle="modal" data-value="{{this._id}}" data-target="#noteModal">Add Notes</button>
                </div>
                <div class="panel-body">
                    {{this.notes.body}}
                </div>
                </div>
                {{/if}}

            {{/each}}


<!-- Modal -->
            <div id="noteModal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <!--title including the id of the current article-->
                            <h5 class="modal-title">Note for: <span id="noteModalLabel"></span></h5>
                            <!--where notes will be displayed-->
                            <div>
                                <ul id="notesBody">
                                    
                                </ul>
                            </div>
                        </div>
                        <form class="create-update-form" action="/" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="notestext">Enter New Note</label>
                                <!--enter note text-->
                                <input type="text" required id="notestext" name="notes" rows="3"></input>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" id="saveButton savenote" class="btn btn-primary savenote">Save changes</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>